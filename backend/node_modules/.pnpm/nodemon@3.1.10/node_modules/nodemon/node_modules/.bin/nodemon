#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/nodemon@3.1.10/node_modules/nodemon/bin/node_modules:/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/nodemon@3.1.10/node_modules/nodemon/node_modules:/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/nodemon@3.1.10/node_modules:/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/nodemon@3.1.10/node_modules/nodemon/bin/node_modules:/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/nodemon@3.1.10/node_modules/nodemon/node_modules:/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/nodemon@3.1.10/node_modules:/Users/bohdan.vorobel/Desktop/MERN-store/backend/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/nodemon.js" "$@"
else
  exec node  "$basedir/../../bin/nodemon.js" "$@"
fi
